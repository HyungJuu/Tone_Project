<UserControl x:Class="LoginApp.Views.SignInView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LoginApp.Views"
             xmlns:util="clr-namespace:LoginApp.Utils"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        
        <Label Grid.Row="0" Content="Login" HorizontalAlignment="Center" FontSize="20" FontWeight="Bold" Margin="20"/>

        <Border Grid.Row="1" BorderBrush="LightGray" BorderThickness="1" Background="White" Width="300" Height="330">
            <Grid HorizontalAlignment="Center" >
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="auto" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Row="1" Grid.ColumnSpan="3" Margin="20 30 20 0">
                    <TextBox Text="{Binding Id}" BorderBrush="LightGray" BorderThickness="0 0 0 1.5" Margin="0 5" Padding="10 5">
                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Style.Resources>
                                    <VisualBrush x:Key="CueBannerBrush" AlignmentX="Left" AlignmentY="Center" Stretch="None">
                                        <VisualBrush.Visual>
                                            <Label Content="아이디" Foreground="LightGray" Padding="10 5"/>
                                        </VisualBrush.Visual>
                                    </VisualBrush>
                                </Style.Resources>

                                <Style.Triggers>
                                    <Trigger Property="Text" Value="{x:Static sys:String.Empty}">
                                        <Setter Property="Background" Value="{StaticResource CueBannerBrush}" />
                                    </Trigger>
                                    <Trigger Property="Text" Value="{x:Null}">
                                        <Setter Property="Background" Value="{StaticResource CueBannerBrush}" />
                                    </Trigger>
                                    <Trigger Property="IsKeyboardFocused" Value="True">
                                        <Setter Property="Background" Value="White" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Style>
                    </TextBox>
                    <PasswordBox util:PasswordBoxHelper.BoundPassword="{Binding Password, Mode=TwoWay}"
                                 BorderBrush="LightGray" BorderThickness="0 0 0 1.5" Margin="0 5"
                                 Height="30" Padding="10 5">
                        <PasswordBox.Style>
                            <Style TargetType="PasswordBox">
                                <Style.Resources>
                                    <VisualBrush x:Key="CueBannerBrush" AlignmentX="Left" AlignmentY="Center" Stretch="None">
                                        <VisualBrush.Visual>
                                            <Label Content="비밀번호" Foreground="LightGray" Padding="10 5"/>
                                        </VisualBrush.Visual>
                                    </VisualBrush>
                                </Style.Resources>

                                <Style.Triggers>
                                    <Trigger Property="util:PasswordBoxHelper.BoundPassword" Value="{x:Static sys:String.Empty}">
                                        <Setter Property="Background" Value="{StaticResource CueBannerBrush}" />
                                    </Trigger>
                                    <Trigger Property="util:PasswordBoxHelper.BoundPassword" Value="{x:Null}">
                                        <Setter Property="Background" Value="{StaticResource CueBannerBrush}" />
                                    </Trigger>
                                    <Trigger Property="IsKeyboardFocused" Value="True">
                                        <Setter Property="Background" Value="White" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </PasswordBox.Style>
                    </PasswordBox>

                    <StackPanel Orientation="Horizontal">
                        <CheckBox Command="{Binding SaveSignInInfoCommand}" Margin="0 5"/>
                        <Label Content="간편로그인 정보 저장" FontSize="10"/>
                    </StackPanel>

                    <TextBlock Text="{Binding LoginStatus}"
                               HorizontalAlignment="Left"
                               Foreground="Red" Margin="0 5"
                               FontSize="10"/>
                    <Button Content="로그인"
                            Command="{Binding SignInCommand}"
                            Style="{StaticResource SignInOut}"
                            FontSize="11"
                            Margin="0 10" />
                </StackPanel>

                <Button Grid.Row="2" Grid.Column="0"
                        Content="회원가입" Command="{Binding SignUpCommand}"
                        HorizontalAlignment="Left" Margin="20 0 0 0" />
                <Button Grid.Row="2" Grid.Column="1"
                        Content="아이디찾기" Command="{Binding FindIdCommand}"
                        HorizontalAlignment="Right"/>
                <Button Grid.Row="2" Grid.Column="2"
                        Content="비밀번호찾기" Command="{Binding FindPasswordCommand}"
                        HorizontalAlignment="Right" Margin="10 0 20 0"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
