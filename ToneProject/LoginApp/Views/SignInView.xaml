<UserControl x:Class="LoginApp.Views.SignInView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LoginApp.Views"
             xmlns:util="clr-namespace:LoginApp.Utils"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <Border BorderBrush="Black" BorderThickness="1" Background="LightGray" Width="260" Height="300">
        <Grid HorizontalAlignment="Center" >
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>

            <StackPanel Grid.ColumnSpan="3" Margin="0 25">
                <Label Content="Login" HorizontalAlignment="Center"  FontSize="20" FontWeight="Bold"/>
                <Separator Height="1" Width="220" Background="Black"/>
            </StackPanel>
            
            <StackPanel Grid.Row="1" Grid.ColumnSpan="3" Margin="10 0">
                <TextBox Text="{Binding Id}" />
                <PasswordBox util:PasswordBoxHelper.BoundPassword="{Binding Password, Mode=TwoWay}"
                             Height="30" Padding="10 5" />
                <TextBlock Text="{Binding LoginStatus}"
                           HorizontalAlignment="Center"
                           Foreground="Red" Margin="0 10"
                           FontSize="11"/>
                <Button Content="로그인"
                        Command="{Binding SignInCommand}" Style="{StaticResource SignInOut}" Margin="0 0 0 10" />
            </StackPanel>

            <Button Grid.Row="2" Grid.Column="0"
                    Content="회원가입" Command="{Binding SignUpCommand}"
                    HorizontalAlignment="Left" Margin="10 0 0 0" />
            <Button Grid.Row="2" Grid.Column="1"
                    Content="아이디찾기" Command="{Binding FindIdCommand}"
                    HorizontalAlignment="Right"/>
            <Button Grid.Row="2" Grid.Column="2"
                    Content="비밀번호 찾기" Command="{Binding FindPasswordCommand}"
                    HorizontalAlignment="Right" Margin="10 0"/>
            
            <Separator Grid.Row="3" Grid.ColumnSpan="3" Height="1" Width="220" Background="Black" Margin="0 20"/>

        </Grid>
    </Border>
</UserControl>
