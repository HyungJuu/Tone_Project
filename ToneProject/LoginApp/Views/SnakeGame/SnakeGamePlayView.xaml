<UserControl x:Class="LoginApp.Views.SnakeGame.SnakeGamePlayView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LoginApp.Views.SnakeGame"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <UserControl.Resources>
        <Style TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsPaused}" Value="True">
                    <Setter Property="Content" Value="재개" />
                </DataTrigger>
                <DataTrigger Binding="{Binding IsPaused}" Value="False">
                    <Setter Property="Content" Value="일시정지" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid Background="AliceBlue">
        <!-- 카운트다운 표시 -->
        <TextBlock Text="{Binding CountdownDisplay}" 
                   HorizontalAlignment="Center" VerticalAlignment="Center"
                   FontSize="50" Foreground="Red" />

        <!-- 10분 타이머 표시 -->
        <TextBlock Text="{Binding TimerDisplay}" 
                   Background="White"
                   HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10"
                   FontSize="16" Foreground="Black" />

        <!-- 게임 영역 -->
        <Border BorderBrush="Blue" BorderThickness="3" Width="300" Height="330">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="게임기능 추가 예정" FontSize="20" />
            </StackPanel>
        </Border>

        <!-- 일시정지/재개 버튼 -->
        <Button Command="{Binding TogglePauseCommand}" Width="80" Height="20"
                HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10">
        </Button>
    </Grid>
</UserControl>
