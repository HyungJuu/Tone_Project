<UserControl x:Class="LoginApp.Views.SnakeGame.SnakeGameEndView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LoginApp.Views.SnakeGame"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White">

        <Border BorderBrush="MediumVioletRed" BorderThickness="3" Width="300" Height="330" Background="Black">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="게임 종료" FontSize="20" Foreground="White" HorizontalAlignment="Center"/>
                <Button Content="성적 보기" Style="{x:Null}" Margin="30" Command="{Binding ShowMyTopScoreCommand}"/>
                <Button Content="게임 재시작" Style="{x:Null}" Command="{Binding StartAgainCommand}"/>
            </StackPanel>
        </Border>

    </Grid>
</UserControl>
